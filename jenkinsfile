pipeline {
    agent { label 'terraform' }
    
    stages {
        stage ('sourcecode') {
            steps {
                git url: 'https://github.com/maramvenkatareddy/dotnetcore-docs-hello-world.git',
                    branch: 'master'
            }
        }
        stage ('build the code') {
            steps {
                    sh 'dotnet build *.csproj'
            }
        }
        stage ('publish the results') {
            steps {
                sh 'dotnet build *.csproj'
            }
        }

        stage ('craeate zip file') {
            steps {
                sh 'zip -r dotnetcore-docs-hello-world-1.0.0.zip /home/venkatareddy/dotnetcore-docs-hello-world/bin/Debug/net6.0/publish'
            }
        }
    }
}
